$siteAColor = #111
$siteABgColor = #F03838
$siteDescColor = #9e9e9e

header
  line-height 1.8rem

  .site-branding
    margin-bottom 2rem

    .site-title
      margin 0
      font-size 3.8rem
      font-weight 700
      letter-spacing -2px

      a
        display inline-block
        color $siteAColor
        line-height 3rem
        height 3rem

    .site-description
      color $siteAColor
      font-size 1.3rem
      margin 1rem 0 0

  .site-navigation

    ul
      list-style none
      padding 0
      margin 0
      font-size 1.6em

      li
        display inline-block
        margin-right 1rem

        a
          display block
          color $siteAColor
          font-size 1.6rem
          line-height 2rem
