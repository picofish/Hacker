$siteAColor = #111
$siteABgColor = #F03838
$siteDescColor = #9e9e9e

header
  line-height 1.8rem
  margin-bottom 4rem

  .site-branding
    width 50%
    float left
    

    .site-title
      margin 0
      font-size 2rem
      font-weight 700

      a
        display inline-block
        color $siteAColor
        line-height 3rem
        height 3rem

    .site-description
      color $siteAColor
      font-size 1.3rem
      margin 1rem 0 0

  .site-navigation
    width 50%
    float left
    text-align right

    ul
      list-style none
      padding 0
      margin 0
      font-size 1.6em

      li
        display inline-block
        margin-right 1rem

        a
          display block
          color $siteAColor
          font-size 1.6rem
          line-height 2rem
